{
  "identifier": "kapalla.pint",
  "name": "Laravel Pint",
  "organization": "Kai Kapalla",
  "description": "Integrates Laravel Pint into your Nova projects for automatic code formatting",
  "version": "1.0",
  "repository": "https://github.com/kapalla/nova-laravel-pint",
  "bugs": "https://github.com/kapalla/nova-laravel-pint/issues",
  "categories": ["formatters"],

  "main": "main.js",

  "activationEvents": ["onLanguage:php", "onLanguage:advphp"],

  "entitlements": {
    "process": true,
    "filesystem": "readonly"
  },

  "commands": {
    "editor": [
      {
        "title": "Format with Laravel Pint",
        "command": "kapalla.pint.format",
        "shortcut": "option-shift-f"
      }
    ]
  },

  "config": [
    {
      "key": "laravel-pint.format-on-save.section",
      "title": "Format on save",
      "description": "Can be overridden in project settings.",
      "type": "section",
      "children": [
        {
          "key": "laravel-pint.format-on-save",
          "title": "Format documents when saved",
          "description": "Can be overridden in project settings.",
          "type": "boolean",
          "default": true
        },
        {
          "key": "laravel-pint.preset",
          "title": "Preset",
          "description": "Can be overridden in project settings.",
          "type": "enum",
          "values": ["auto", "laravel"],
          "default": "auto"
        }
      ]
    }
  ],
  "config-workspace": [
    {
      "key": "laravel-pint.format-on-save.section",
      "title": "Format on save",
      "type": "section",
      "children": [
        {
          "key": "laravel-pint.format-on-save",
          "title": "Format documents when saved",
          "type": "enum",
          "values": ["Global Default", "Enable", "Disable"],
          "default": "Global Default"
        }
      ]
    }
  ]
}
